</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <a class="navbar-brand" th:href="@{/}">CampusBoard</a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav me-auto">
        <li class="nav-item"><a class="nav-link" th:href="@{/jobs}">Jobs</a></li>
        <li class="nav-item"><a class="nav-link" th:href="@{/applications}">Applications</a></li>
      </ul>
    </div>
    <div>
      <span th:if="${#request.remoteUser != null}">
        Logged in as <strong th:text="${#request.remoteUser}">user</strong>
        <a class="btn btn-sm btn-outline-secondary ms-2" th:href="@{/logout}">Logout</a>
      </span>
      <a th:if="${#request.remoteUser == null}" class="btn btn-sm btn-primary" th:href="@{/login}">Login</a>
    </div>
  </div>
</nav>

<main class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4">Available Jobs</h1>
    <a class="btn btn-success" th:href="@{/jobs/new}" th:if="${isAdmin}">Post Job</a>
  </div>

  <form th:action="@{/jobs}" method="get" class="row g-2 mb-3">
    <div class="col-auto">
      <input name="q" type="search" class="form-control" placeholder="Search title or company" th:value="${q}"/>
    </div>
    <div class="col-auto">
      <select name="type" class="form-select" th:value="${type}">
        <option value="">Any type</option>
        <option value="FT">Full-time</option>
        <option value="PT">Part-time</option>
      </select>
    </div>
    <div class="col-auto"><button class="btn btn-primary">Search</button></div>
  </form>

  <div th:if="${#lists.isEmpty(jobs)}" class="alert alert-info">No jobs found.</div>

  <div class="list-group">
    <div th:each="job : ${jobs}" class="list-group-item mb-2">
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1" th:text="${job.title}">Job Title</h5>
        <small th:text="${job.postedDate}">2025-01-01</small>
      </div>
      <p class="mb-1" th:text="${job.company}">Company</p>
      <small class="text-muted" th:text="${job.location}">Location</small>
      <div class="mt-2">
        <a class="btn btn-sm btn-outline-primary" th:href="@{|/jobs/${job.id}|}">View</a>
        <a class="btn btn-sm btn-outline-secondary ms-1" th:href="@{|/jobs/${job.id}/apply|}" th:if="${#request.remoteUser != null}">Apply</a>
        <a class="btn btn-sm btn-danger ms-1" th:href="@{|/jobs/${job.id}/delete|}" th:if="${isAdmin}">Delete</a>
      </div>
    </div>
  </div>

  <nav th:if="${totalPages > 1}" aria-label="Page navigation" class="mt-3">
    <ul class="pagination">
      <li class="page-item" th:classappend="${page == 1} ? 'disabled'">
        <a class="page-link" th:href="@{|/jobs?page=${page-1}|}">Previous</a>
      </li>
      <li class="page-item" th:each="i : ${#numbers.sequence(1,totalPages)}" th:classappend="${i==page} ? 'active'">
        <a class="page-link" th:href="@{|/jobs?page=${i}|}" th:text="${i}">1</a>
      </li>
      <li class="page-item" th:classappend="${page == totalPages} ? 'disabled'">
        <a class="page-link" th:href="@{|/jobs?page=${page+1}|}">Next</a>
      </li>
    </ul>
  </nav>
</main>

<footer class="text-center py-3 mt-4">
